{
    "name": "netgen/layouts-ibexa-site",
    "license": "GPL-2.0-only",
    "description": "Skeleton project allowing you to bootstrap a new site based on Netgen Layouts and Ibexa CMS",
    "require": {
        "php": ">=8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "http-interop/http-factory-guzzle": "^1.2",
        "ibexa/oss": "~4.6.12",
        "symfony/console": "5.4.*",
        "symfony/dotenv": "5.4.*",
        "symfony/flex": "^1.17|^2",
        "symfony/framework-bundle": "5.4.*",
        "symfony/runtime": "5.4.*",
        "symfony/yaml": "5.4.*",

        "netgen/layouts-standard": "~1.4.0",
        "netgen/layouts-ibexa": "~1.4.0"
    },
    "require-dev": {
        "symfony/debug-bundle": "5.4.*",
        "symfony/maker-bundle": "^1.0",
        "symfony/web-profiler-bundle": "5.4.*"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "ibexa/post-install": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "*": false
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd",
            "yarn install": "script",
            "ibexa:encore:compile --config-name app": "symfony-cmd",
            "bazinga:js-translation:dump %PUBLIC_DIR%/assets --merge-domains": "symfony-cmd",
            "ibexa:encore:compile": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "5.4.*",
            "endpoint": [
                "https://api.github.com/repos/ibexa/recipes/contents/index.json?ref=flex/main",
                "https://api.github.com/repos/netgen-layouts/recipes/contents/index.json?ref=flex",
                "flex://defaults"
            ]
        },
        "runtime": {
            "error_handler": "\\Ibexa\\Contracts\\Core\\MVC\\Symfony\\ErrorHandler\\Php82HideDeprecationsErrorHandler"
        },
        "branch-alias": {
            "dev-master": "1.4.x-dev"
        }
    }
}
