<!doctype html>
<html lang="{{ app.request.locale|replace({'_': '-'}) }}">
<head>
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/ibexaadminui/img/favicon.ico') }}" />
    <meta charset="utf-8">

    {% block meta %}{% endblock %}

    {% if content is defined and title is not defined %}
        {% set title = ibexa_content_name( content ) %}
    {% endif %}
    <title>{{ title|default( 'Home' ) }}</title>
    <meta name="generator" content="Ibexa Open Source"/>
    {% if content is defined and content.contentInfo.mainLocationId %}
        <link rel="canonical" href="{{ ibexa_path(content) }}" />
    {% endif %}

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}

        {% include '@NetgenLayouts/stylesheets.html.twig' %}
        {% include '@NetgenLayoutsStandard/stylesheets.html.twig' with {full: true} %}
    {% endblock %}
</head>
<body>

{% block layout %}
    {% block content %}
    {% endblock %}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}

    {% include '@NetgenLayouts/javascripts.html.twig' %}
    {% include '@NetgenLayoutsStandard/javascripts.html.twig' with {full: true} %}

    {{ nglayouts_template_plugin('preview.javascripts') }}
{% endblock %}

{{ nglayouts_template_plugin('preview.body') }}
</body>
</html>
